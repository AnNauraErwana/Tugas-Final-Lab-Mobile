<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".GamePlayActivity">

    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5C7893"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_pause_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_1_char"
        android:layout_marginStart="140sp"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:src="@drawable/boy_idle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/player_2_char"
        android:layout_width="396dp"
        android:layout_height="213dp"
        android:layout_marginTop="35sp"
        android:rotation="180"
        android:src="@drawable/girl_idle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:text="JUMP"
        android:fontFamily="@font/arturo_regular"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="#11324D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUMP"
        android:fontFamily="@font/arturo_regular"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="#11324D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonarto_regular"
        android:textColor="#11324D"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/random_image_view"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/coin_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:text="Player 2: 0"
        android:fontFamily="@font/fonarto_regular"
        android:layout_marginHorizontal="20dp"
        android:textColor="#11324D"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_player_2" />

    <TextView
        android:id="@+id/timer_player_2"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:rotation="180"
        android:text="35"
        android:fontFamily="@font/fonarto_regular"
        android:textColor="#5C7893"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/player_2_score"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:rotation="180"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintEnd_toStartOf="@id/timer_player_2"
        app:layout_constraintTop_toTopOf="@id/timer_player_2"
        app:layout_constraintBottom_toBottomOf="@id/timer_player_2"
        />

    <TextView
        android:id="@+id/player_1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1: 0"
        android:fontFamily="@font/fonarto_regular"
        android:textColor="#11324D"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="20dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/player_1_add_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonarto_regular"
        android:layout_marginVertical="30dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/player_1_score"
        app:layout_constraintBottom_toTopOf="@id/player_1_score"/>

    <TextView
        android:id="@+id/player_2_add_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:fontFamily="@font/fonarto_regular"
        android:layout_marginVertical="30dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/player_2_score"
        app:layout_constraintEnd_toEndOf="@+id/player_2_score"
        app:layout_constraintTop_toBottomOf="@id/player_2_score"/>

    <TextView
        android:id="@+id/timer_player_1"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:text="35"
        android:fontFamily="@font/fonarto_regular"
        android:textColor="#5C7893"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/player_1_score"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintStart_toEndOf="@id/timer_player_1"
        app:layout_constraintTop_toTopOf="@id/timer_player_1"
        app:layout_constraintBottom_toBottomOf="@id/timer_player_1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>