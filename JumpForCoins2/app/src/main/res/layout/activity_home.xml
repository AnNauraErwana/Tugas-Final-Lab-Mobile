<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/jump"
        android:layout_gravity="center"
        android:layout_marginVertical="50dp"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textColor="#11324D"
        android:fontFamily="@font/fonarto_regular"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#D5E3F0"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="20dp">

            <Button
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play with Friend"
                android:fontFamily="@font/arturo_regular"
                android:backgroundTint="#11324D"
                android:textColor="@color/white"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR"
                android:fontFamily="@font/fonarto_regular"
                android:textColor="#11324D"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/play_bot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play with Bot"
                android:fontFamily="@font/arturo_regular"
                android:backgroundTint="#11324D"
                android:textColor="@color/white"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp">

        <Button
            android:id="@+id/btn_how_to_play"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="How To Play"
            android:fontFamily="@font/arturo_regular"
            android:backgroundTint="#5C7893"
            android:textColor="@color/white"
            android:layout_marginHorizontal="15dp"/>

        <Button
            android:id="@+id/btn_about"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:fontFamily="@font/arturo_regular"
            android:backgroundTint="#5C7893"
            android:textColor="@color/white"
            android:layout_marginHorizontal="15dp"/>
    </LinearLayout>

</LinearLayout>